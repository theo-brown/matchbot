FROM postgres:alpine

ENV POSTGRES_PASSWORD \
    POSTGRES_USER \
    POSTGRES_PASSWORD \
    APP_DB_USER \
    APP_DB_PASS \
    APP_DB_NAME


RUN psql -U $POSTGRES_USER -c "CREATE USER $APP_DB_USER WITH PASSWORD $APP_DB_PASS;" \ 
    && psql -U $POSTGRES_USER -c "CREATE DATABASE $APP_DB_NAME WITH ENCODING='UTF8' OWNER=$APP_DB_USER;"
